<script type="text/javascript">
  if ("{{{user.rol}}}" !== "Administrador") {
    $('#usuario-option').hide();
  } else {
    $('#usuario-option').show();
  }
</script>

<script type="text/javascript">
  $("#estudiantes").autocomplete({
    source: function (request, response) {
        var matcher = new RegExp( $.ui.autocomplete.escapeRegex(request.term), "i" );
        $.ajax({
            url: "/cursos/crear/obtener",
            dataType: "json",
            success: function (data) {
              
                response($.map(data, function(v,i){
                  
                  console.log(v.rol);
                  if (v.rol == "Estudiante" || v.rol == "estudiante"){
                    
                    var text = v.nombres;
                    if ( text && ( !request.term || matcher.test(text) ) ) {
                        return {
                                label: v.nombres + " " + v.apellidos,
                                value: v.nombres + " " + v.apellidos
                               };
                    }
                  }
                }));
            }
        });
    }
  });
  $("#profesor").autocomplete({
    source: function (request, response) {
        var matcher = new RegExp( $.ui.autocomplete.escapeRegex(request.term), "i" );
        $.ajax({
            url: "/cursos/crear/obtener",
            dataType: "json",
            success: function (data) {
              
                response($.map(data, function(v,i){
                  
                  console.log(v.rol);
                  if (v.rol == "Profesor" || v.rol == "profesor"){
                    
                    var text = v.nombres;
                    if ( text && ( !request.term || matcher.test(text) ) ) {
                        return {
                                label: v.nombres + " " + v.apellidos,
                                value: v.nombres + " " + v.apellidos
                               };
                    }
                  }
                }));
            }
        });
    }
  });
