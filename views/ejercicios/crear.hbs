<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Sandbox | Crear ejercicio</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/bower_components/components-font-awesome/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="/bower_components/Ionicons/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/bower_components/AdminLTE/dist/css/AdminLTE.min.css">
  <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
  <link rel="stylesheet" href="/bower_components/AdminLTE/dist/css/skins/_all-skins.css">
  <!-- DataTable style -->
  <link rel="stylesheet" href="/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">

  <header class="main-header">
    <!-- Logo -->
    <a href="#" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>SB</b></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>Sandbox</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs" id="nombre-menu">{{user.correo}}</span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <p id="nombre-popup-menu">
                  {{user.nombres}} {{user.apellidos}} - {{user.rol}}
                </p>
              </li>
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-right">
                  <a href="/logout" class="btn btn-default btn-flat">Cerrar sesión</a>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <!-- =============================================== -->

  <!-- Left side column. contains the sidebar -->
  <aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <img class="img-circle" alt="User Image" id="imagen-perfil" src="../img/user.png">
        </div>
        <div class="pull-left info">
          <p class="nombre" id="nombre-perfil">{{user.nombres}}</p>
          <p class="nombre" id="apellido-perfil">{{user.apellidos}}</p>
        </div>
      </div>
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu">
        <li class="header">Módulos</li>
        <li id="usuario-option"><a href="/usuarios"><i class="fa fa-book"></i> <span>Usuarios</span></a></li>
        <li class="active"><a href="/ejercicios"><i class="fa fa-tasks"></i> <span>Ejercicios</span></a></li>
        <li id="curso-option"><a href="/cursos"><i class="fa fa-folder"></i> <span>Cursos</span></a></li>
        <li id="reporte-option"><a href="/reportes"><i class="fa fa-area-chart"></i> <span>Reportes</span></a></li>
      </ul>
    </section>
    <!-- /.sidebar -->
  </aside>

  <!-- =============================================== -->

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Crear ejercicio</h1>
      <ol class="breadcrumb">
        <li><a href="/ejercicios"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Ejercicios</li>
        <li class="active">Crear</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-sm-8 col-sm-pull-2 col-sm-push-2" id="alert" hidden>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="box box-primary">
            <!-- form start -->
            <form role="form" id="form-crear">
              <div class="box-body">
                <div class="form-group" id="titulo-group">
                  <label for="titulo">Título</label>
                  <input type="text" class="form-control" id="titulo" placeholder="Título del ejercicio">
                  <p class="hidden text-danger" id="msg-titulo">Título vacío</p>
                </div>
                <div class="form-group" id="descripcion-group">
                  <label for="descripcion">Descripción</label>
                  <textarea class="form-control" rows="3" id="descripcion" placeholder="Descripción del ejercicio"></textarea>
                  <p class="hidden text-danger" id="msg-descripcion">Descripción vacía</p>
                </div>
                <div class="form-group" id="entrada-group">
                  <div class="row">
                    <div class="col-sm-6">
                      <p>Ingrese los datos dependiendo del orden de los argumentos</p>
                      <label for="entrada">Datos de entrada</label>
                      <div class="row">
                        <div class="col-sm-10">
                          <input type="text" name="entrada" id="entrada" placeholder="Valor" class="col-xs-12 form-control">
                        </div>
                        <div class="col-sm-2">
                          <button type="button" class="btn btn-primary" id="agregar-entrada">Agregar</button>
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-5 col-sm-push-1">
                        <div class="col-sm-12" id="entrada-agregados">
                          <label>Datos entrada agregados</label>
                        </div>
                    </div>
                  </div>  
                  <p class="hidden text-danger" id="msg-entrada">No se han agregado entradas</p>
                </div>

                <div class="form-group" id="salida-group">
                  <div class="row">
                    <div class="col-sm-6">
                      <label for="salida">Texto de salida</label>
                      <div class="row">
                        <div class="col-sm-10">
                          <textarea class="form-control" rows="3" id="salida" placeholder="Texto de salida"></textarea>
                        </div>
                      </div>
                    </div>
                  </div>  
                  <p class="hidden text-danger" id="msg-salida">No se ha agregado el texto de salida</p>
                </div>

                <div class="form-group" id="etiquetas-group">
                  <div class="row">
                    <div class="col-sm-6">
                      <label for="titulo">Etiquetas</label>
                      <div class="row">
                        <div class="col-sm-10">
                          <select class="form-control" id="etiquetas">
                            {{#each etiquetas}}
                              <option value="{{_id}}">{{nombre}}</option>
                            {{/each}}
                          </select>
                        </div>
                        <div class="col-sm-2">
                          <button type="button" class="btn btn-primary" id="agregar-etiqueta">Agregar</button>
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-5 col-sm-push-1">
                        <div class="col-sm-12" id="etiquetas-agregadas">
                          <label>Etiquetas Agregadas</label>
                        </div>
                    </div>
                  </div>
                  
                  
                  <p class="hidden text-danger" id="msg-etiquetas">No se han agregado etiquetas</p>
                </div>
                <div class="form-group" id="dificultad-group">
                  <label for="dificultad">Dificultad</label>
                  <div class="row">
                    <div class="col-sm-5">
                        <select class="form-control" id="dificultad">
                          {{#each dificultades}}
                              <option value="{{_id}}">{{nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                  </div>
                  <p class="hidden text-danger" id="msg-dificultad">Dificultad vacía</p>
                </div>
              </div>
              <!-- /.box-body -->
              <input type="text" name="id-autor" id="id-autor" value="{{{user._id}}}" hidden>
              <div class="box-footer text-center">
                <a href="/ejercicios" class="btn btn-default">Cancelar</a>
                <button type="submit" class="btn btn-primary" id="crear-ejercicio">Crear</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      <b>Version</b> 2.3.7
    </div>
    <strong>Copyright &copy; 2014-2016 <a href="http://almsaeedstudio.com">Almsaeed Studio</a>.</strong> All rights
    reserved.
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Create the tabs -->
    <ul class="nav nav-tabs nav-justified control-sidebar-tabs">

    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <!-- Home tab content -->
      <div class="tab-pane" id="control-sidebar-home-tab">
      </div>
      <!-- /.tab-pane -->
      <!-- Stats tab content -->
      <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>
      <!-- /.tab-pane -->
    </div>
  </aside>
  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->

<!-- jQuery 2.2.3 -->
<script src="/js/jquery-2.2.3.min.js"></script>
<!-- Bootstrap 3.3.6 -->
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="/node_modules/slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="/bower_components/fastclick/lib/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="/bower_components/AdminLTE/dist/js/app.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="/bower_components/AdminLTE/dist/js/demo.js"></script>
<!-- DataTable -->
<script type="text/javascript" language="javascript" src="/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" language="javascript" src="/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<script src="/js/sandbox/ejercicios/ejercicios_crear.js"></script>
<script type="text/javascript">
  if ("{{{user.rol}}}" !== "Administrador") {
    $('#usuario-option').hide();
    $('#curso-option').hide();
    $('#reporte-option').hide();
  }
</script>

</body>
</html>
