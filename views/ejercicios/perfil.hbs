<script type="text/javascript">
  if ("{{{user.rol}}}" !== "Administrador") {
    $('#usuario-option').hide();
  }
    if ("{{{user.rol}}}" === "Estudiante") {
    $('#curso-option').hide();
  }

function agregarInsignias(novato, intermedio, pro, ganadas) {
  if(ganadas){
    var divEjerciciosDificultad = $("#ejercicios-dificultad-estadistica");
  }
  else{
    var divEjerciciosDificultad = $("#insignias-disp");
  }

  if(novato){
    var divCol = $('<div class="col-xs-12 col-sm-6 col-md-4"></div>');
    var box = $(' <div class="info-box bg-blue"></div>');
    var span = $('<span class="info-box-icon"><i class="fa fa-cube"></i></span>');
    var boxContent = $('<div class="info-box-content"></div>');
    var boxContentText = $('<span class="info-box-text">Novato</span>');
    var boxContentNumber = $('<span class="info-box-number">10 ejercicios resueltos</span>');
    boxContent.append(boxContentText);
    boxContent.append(boxContentNumber);
    box.append(span);
    box.append(boxContent);
    divCol.append(box);
    divEjerciciosDificultad.append(divCol);
  }

  if(intermedio) {
    var divCol = $('<div class="col-xs-12 col-sm-6 col-md-4"></div>');
    var box = $(' <div class="info-box bg-orange"></div>');
    var span = $('<span class="info-box-icon"><i class="fa fa-cubes"></i></span>');
    var boxContent = $('<div class="info-box-content"></div>');
    var boxContentText = $('<span class="info-box-text">PRO</span>');
    var boxContentNumber = $('<span class="info-box-number">20 ejercicios resueltos</span>');
    boxContent.append(boxContentText);
    boxContent.append(boxContentNumber);
    box.append(span);
    box.append(boxContent);
    divCol.append(box);
    divEjerciciosDificultad.append(divCol);
  }

  if(pro) {
    var divCol = $('<div class="col-xs-12 col-sm-6 col-md-4"></div>');
    var box = $(' <div class="info-box bg-purple"></div>');
    var span = $('<span class="info-box-icon"><i class="fa fa-car"></i></span>');
    var boxContent = $('<div class="info-box-content"></div>');
    var boxContentText = $('<span class="info-box-text">PRO</span>');
    var boxContentNumber = $('<span class="info-box-number">30 ejercicios resueltos</span>');
    boxContent.append(boxContentText);
    boxContent.append(boxContentNumber);
    box.append(span);
    box.append(boxContent);
    divCol.append(box);
    divEjerciciosDificultad.append(divCol);
  }
}

  if("{{{numejercicios}}}" >= 10 && "{{{numejercicios}}}" <= 20){
    // var divEjerciciosDificultad = $("#ejercicios-dificultad-estadistica");
    // var divCol = $('<div class="col-xs-12 col-sm-6 col-md-4"></div>');
    // var box = $(' <div class="info-box bg-blue"></div>');
    // var span = $('<span class="info-box-icon"><i class="fa fa-cube"></i></span>');
    // var boxContent = $('<div class="info-box-content"></div>');
    // var boxContentText = $('<span class="info-box-text">Novato</span>');
    // var boxContentNumber = $('<span class="info-box-number">10 ejercicios resueltos</span>');
    // boxContent.append(boxContentText);
    // boxContent.append(boxContentNumber);
    // box.append(span);
    // box.append(boxContent);
    // divCol.append(box);
    // divEjerciciosDificultad.append(divCol);
    agregarInsignias(true, false, false, true);
    agregarInsignias(false, true, true, false);
  } else if("{{{numejercicios}}}" > 20 && "{{{numejercicios}}}" <= 30) {
    agregarInsignias(true, true, false, true);
  } else if("{{{numejercicios}}}" > 30) {
    agregarInsignias(true, true, true, true);
  } else {
    agregarInsignias(true, true, true, false);
        var obtenidas = $("#ejercicios-dificultad-estadistica");
    var divCol = $('<div class="col-xs-12 col-sm-6 col-md-4"></div>');
    divCol.append('<p>Ninguna insignia obtenida</p>');
    obtenidas.append(divCol);
  }
</script>

